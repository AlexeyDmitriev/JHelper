<idea-plugin version="2">
	<id>name.admitriev.jhelper</id>
	<name>JHelper</name>
	<version>0.1</version>
	<vendor>Alexey Dmitriev</vendor>

	<description>Sport programming tool to inline library code and provide testing framework</description>

	<change-notes>
	</change-notes>

	<idea-version since-build="131"/>

	<depends>com.intellij.modules.lang</depends>
	<depends>com.intellij.modules.appcode</depends>

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
	</extensions>

	<application-components>
		<!-- Add your application components here -->
	</application-components>

	<project-components>
		<!-- Add your project components here -->
		<component>
			<implementation-class>name.admitriev.jhelper.components.Configurator</implementation-class>
		</component>
	</project-components>
	<actions>
		<action
			id="name.admitriev.jhelper.configureAction"
			class="name.admitriev.jhelper.actions.ConfigureAction"
			text="Configure"
			description="Configure JHelper"
			icon="/icons/settings.png"
		/>
		<action
			id="name.admitriev.jhelper.GenerateCodeAction"
			class="name.admitriev.jhelper.actions.GenerateCodeAction"
			text="Generate code to send"
			description="Inlines include and removes unused code."
		    icon="/icons/copy.png"
		/>
	</actions>
</idea-plugin>